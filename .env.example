# 系统配置
PORT=3000
NODE_ENV=development

# 数据库配置
DB_PATH=./database.sqlite

# 邮件配置
EMAIL_SERVICE=QQmail
# QQ邮箱SMTP配置
SMTP_SERVER=smtp.qq.com
SMTP_PORT=587
# 请替换为您的QQ邮箱
SMTP_USERNAME=your-qq-email@qq.com
# 请替换为您的QQ邮箱授权码（不是登录密码）
SMTP_PASSWORD=your-qq-email-authorization-code
FROM_EMAIL=your-qq-email@qq.com

# DeepSeek-R1 API配置
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions

# Google TTS API配置
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json

# 推送配置
PUSH_TIME=08:00

# 兴趣领域配置
INTERESTS=财经,军事,生活,科技

# Cpolar配置
CPOLAR_AUTHTOKEN=your-cpolar-authtoken