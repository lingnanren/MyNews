{
  "name": "mynews",
  "version": "1.0.0",
  "description": "自定义新闻聚合与推送系统",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "npm run test:all",
    "test:all": "echo \"Running all tests...\" && npm run test:rss && npm run test:ai && npm run test:email",
    "test:rss": "echo \"Testing RSS functionality...\" && node test/rss/test-rss-sources.js",
    "test:ai": "echo \"Testing AI functionality...\" && node test/ai/test-ai-summary.js",
    "test:email": "echo \"Testing email functionality...\" && node test/email/test-email.js",
    "test:config": "echo \"Testing configuration...\" && node test/config/test-config.js",
    "test:data": "echo \"Testing data...\" && node test/data/check-news-data.js",
    "fetch:rss": "node test/rss/fetch-rss-news.js",
    "send:email": "node test/email/send-news-email.js"
  },
  "keywords": [
    "news",
    "rss",
    "aggregator",
    "push"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^8.0.1",
    "rss-parser": "^3.13.0",
    "sequelize": "^6.35.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
